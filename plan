<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do List Planner</title>
  <style>
    body { background: #f9f9fa; font-family: 'GmarketSans', 'Pretendard', sans-serif; margin: 0; }
    .container { max-width: 420px; margin: 40px auto; padding: 20px 16px; background: #fff; border-radius: 20px; box-shadow: 0 4px 32px rgba(0,0,0,0.09); }
    h1 { text-align: center; margin-bottom: 20px; font-size: 2rem; color: #2c2d2f; }
    form { display: flex; gap: 8px; margin-bottom: 18px; }
    input[type="text"] { flex: 1; padding: 12px; font-size: 1rem; border-radius: 10px; border: 1px solid #ddd; }
    button { padding: 12px 18px; font-size: 1rem; border: none; background: #3f51b5; color: #fff; border-radius: 10px; cursor: pointer; transition: background .2s; }
    button:hover { background: #1b3072; }
    ul { list-style: none; padding: 0; margin: 0; }
    li { display: flex; align-items: center; justify-content: space-between; gap: 6px; background: #f3f4f8; margin-bottom: 10px; border-radius: 8px; padding: 10px 14px; transition: background .2s; }
    li.done { text-decoration: line-through; color: #bbb; background: #e6e6eb; }
    .actions { display: flex; gap: 4px; }
    .del-btn { background: #e57373; }
    .del-btn:hover { background: #c62828; }
    @media (max-width: 520px) {
      .container { max-width: 98vw; margin: 8vw auto; }
      h1 { font-size: 1.3rem; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>플래너</h1>
    <form id="todo-form" autocomplete="off">
      <input id="todo-input" type="text" placeholder="할 일을 입력하세요" maxlength="50" required>
      <button type="submit">추가</button>
    </form>
    <ul id="todo-list"></ul>
  </div>

  <script>
    // 로컬스토리지에서 투두 불러오기
    let todos = JSON.parse(localStorage.getItem('todos') || '[]');

    const list = document.getElementById('todo-list');
    const form = document.getElementById('todo-form');
    const input = document.getElementById('todo-input');

    function saveTodos() {
      localStorage.setItem('todos', JSON.stringify(todos));
    }

    function renderTodos() {
      list.innerHTML = '';
      todos.forEach((todo, idx) => {
        const li = document.createElement('li');
        if (todo.done) li.classList.add('done');
        // 체크박스
        const checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.checked = todo.done;
        checkbox.setAttribute('aria-label', '완료 체크');
        checkbox.onclick = () => {
          todos[idx].done = !todos[idx].done;
          saveTodos(); renderTodos();
        };

        // 내용
        const span = document.createElement('span');
        span.textContent = todo.text;

        // 액션(삭제)
        const actions = document.createElement('div');
        actions.className = 'actions';

        const delBtn = document.createElement('button');
        delBtn.textContent = '삭제';
        delBtn.className = 'del-btn';
        delBtn.onclick = () => {
          if(confirm('정말 삭제하시겠습니까?')) {
            todos.splice(idx, 1);
            saveTodos(); renderTodos();
          }
        };
        actions.appendChild(delBtn);

        li.appendChild(checkbox);
        li.appendChild(span);
        li.appendChild(actions);
        list.appendChild(li);
      });
    }

    form.onsubmit = e => {
      e.preventDefault();
      const val = input.value.trim();
      if(!val) return;
      todos.unshift({text: val, done: false});
      saveTodos();
      renderTodos();
      input.value = '';
      input.focus();
    };

    renderTodos();
  </script>
</body>
</html>
